{
    "name": "exifeye/exifeye",
    "type": "library",
    "description": "PHP Exif Library. A library for reading and writing Exif headers in JPEG and TIFF images using PHP.",
    "keywords": [
        "image", "exif"
    ],
    "homepage": "http://pel.github.com/pel/",
    "license": "GPL-2.0",
    "require": {
        "php": ">=5.4.0",
        "ext-gd": "*",
        "ext-gmp": "*",
        "psr/log": "*",
        "monolog/monolog": "*",
        "rodneyrehm/plist": "*"
    },
    "require-dev" : {
        "ext-exif": "*",
        "phpunit/phpunit": "*",
        "squizlabs/php_codesniffer": "*",
        "php-coveralls/php-coveralls": "*",
        "symfony/console": "*",
        "symfony/finder": "*",
        "symfony/filesystem": "*",
        "symfony/var-dumper": "*",
        "symfony/yaml": "*",
        "bramus/monolog-colored-line-formatter": "^2.0",
        "shanethehat/pretty-xml": "*"
    },
    "autoload": {
        "psr-4": {
            "ExifEye\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ExifEye\\Test\\core\\": "test/"
        }
    },
    "bin": ["bin/exifeye"]
}
